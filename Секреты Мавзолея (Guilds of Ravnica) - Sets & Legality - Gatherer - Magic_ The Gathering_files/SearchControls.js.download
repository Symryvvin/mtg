function UpdateSimpleSearchRestrictions(obj)
{
    var id = obj.id;
    var otherId = "";
    if(id == ClientIDs.SearchColorMulti)
    {
        otherId = ClientIDs.SearchColorExclude;
    }
    else
    {
        otherId = ClientIDs.SearchColorMulti;
    }
    
    if(obj.checked)
    {
        $(otherId).checked = false;
        $(otherId).disabled = "disabled";
    }
    else
    {
        $(otherId).disabled = "";
    }
}